{
  "name": "orbbrowser",
  "productName": "Orb Browser",
  "version": "1.0.0",
  "description": "Orb Browser",
  "license": "GPL-3.0-only",
  "author": "solarcosmic",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron": "^38.0.0",
    "electron-chrome-context-menu": "^1.1.0",
    "electron-chrome-extensions": "^4.9.0",
    "electron-chrome-web-store": "^0.13.0"
  },
  "build": {
    "appId": "net.solarcosmic.orbbrowser",
    "productName": "Orb Browser",
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.bin",
      "!**/*.md",
      "!**/test{,s}/**/*",
      "!**/*.log"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
