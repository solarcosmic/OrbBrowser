{
  "name": "orbbrowser",
  "productName": "Orb Browser",
  "version": "1.1.0",
  "description": "Orb Browser",
  "license": "GPL-3.0-only",
  "author": "solarcosmic",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "webpack && electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "build-preload": "webpack"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "electron": "github:castlabs/electron-releases#v38.0.0+wvcus",
    "electron-builder": "^26.0.12",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.11.6",
    "countries-and-timezones": "^3.8.0",
    "electron-chrome-context-menu": "^1.1.0",
    "electron-chrome-extensions": "^4.9.0",
    "electron-chrome-web-store": "^0.13.0",
    "electron-store": "^11.0.0",
    "moment-timezone": "^0.6.0"
  },
  "build": {
    "appId": "net.solarcosmic.orbbrowser",
    "productName": "Orb Browser",
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/",
      "customDir": "v38.0.0%2Bwvcus",
      "customFilename": "electron-v38.0.0+wvcus-win32-x64.zip"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "dist/preload.bundle.js",
      "dist/renderer.bundle.js",
      "dist/preload.js",
      "dist/preload.cjs",
      "!node_modules/.bin",
      "!**/*.md",
      "!**/test{,s}/**/*",
      "!**/*.log"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
